@model Nop.Plugin.Payments.RayPay.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="PaymentRayPay" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T("Plugins.Payments.RayPay.Instructions", $"{webHelper.GetStoreLocation()}Plugins/PaymentRayPay/PDTHandler"))

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="UserID_OverrideForStore" asp-input="UserID" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="UserID" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UserID" />
                        <span asp-validation-for="UserID"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MarketingID_OverrideForStore" asp-input="MarketingID" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="MarketingID" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MarketingID" />
                        <span asp-validation-for="MarketingID"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="EnableSandBox_OverrideForStore" asp-input="EnableSandBox" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="EnableSandBox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EnableSandBox" />
                        <span asp-validation-for="EnableSandBox"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>